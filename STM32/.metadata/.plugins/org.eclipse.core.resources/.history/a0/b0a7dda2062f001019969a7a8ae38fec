void MemManage_Handler(void){
	uint32_t faultAddr;
	    uint8_t faultStatus;
	    MPU_GetErrorDetails(&faultAddr, &faultStatus);
	    if (faultStatus & MPU_FAULT_DACCVIOL) {
	        // Handler error Data Access Violation
	    }
	    while (1); // Debug error
}

